@model StoreFront.DATA.EF.Models.CountryOfOrigin

@{
    ViewData["Title"] = "Delete" + Model.Country;
}

<h1>@ViewData["Title"]</h1>

<h3 class="text-danger">Are you sure you want to delete this?</h3>
<div>
   
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Country)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Country)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CountryId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to Countries</a>
    </form>
</div>
