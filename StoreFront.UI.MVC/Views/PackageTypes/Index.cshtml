@model IEnumerable<StoreFront.DATA.EF.Models.PackageType>

@{
    ViewData["Title"] = "Package Types";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Add New Package Type</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PackageType1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PackageType1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PackageTypeId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PackageTypeId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PackageTypeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
